<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    android:padding="5dp"
    android:background="@color/bgcolor">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/line1">

        <Button
            android:id="@+id/btnback"
            android:layout_width="46dp"
            android:layout_height="34dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/ic_arrow_left_circle"
            android:textColor="@color/belowbgcolor"/>

        <TextView
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lustria"
            android:text="Lanchanika Developer"
            android:textColor="@color/belowbgcolor"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/line1"
        android:id="@+id/linelogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/wmsu" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lustria"
            android:text="Republic of the Philippines \n Western Mindanao State University \n College of Computing Studiess"
            android:textAlignment="center"
            android:textColor="@color/belowbgcolor"
            android:textStyle="bold" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ccslogo" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linelogo"
        android:id="@+id/linearlogotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lustria"
            android:text="DEPARTMENT OF INFORMATION TECHNOLOGY"
            android:textAlignment="center"
            android:textColor="@color/belowbgcolor"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlogotext">

        <LinearLayout
            android:id="@+id/rela1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:id="@+id/cd2"
                android:layout_centerInParent="true"
                android:layout_width="250dp"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ajpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/aj" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lustria"
                        android:text="Ladjamatli, Abusood J. \n Developer"
                        android:textAlignment="center"
                        android:textColor="@color/belowbgcolor"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:id="@+id/cd1"
                android:layout_centerInParent="true"
                android:layout_width="250dp"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/angepic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lustria"
                        android:text="Ortillano, Angelica CaÃ±ete \n Documentation"
                        android:textAlignment="center"
                        android:textColor="@color/belowbgcolor"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:id="@+id/cd3"
                android:layout_centerInParent="true"
                android:layout_width="250dp"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/leopic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/leo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lustria"
                        android:text="Villaflores, Leo Patrick\n Researcher and Documentation"
                        android:textAlignment="center"
                        android:textColor="@color/belowbgcolor"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lustria"
                android:text="CAPSTONE PROJECT 2022"
                android:textColor="@color/belowbgcolor"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>




</RelativeLayout>