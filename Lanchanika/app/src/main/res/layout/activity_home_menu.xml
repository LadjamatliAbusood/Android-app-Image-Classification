<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".HomeMenuActivity">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/imglogo"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_below="@+id/imglogo"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lustria"
        android:text="Lanchanika\nMenu"
        android:textAlignment="center"
        android:textColor="@color/belowbgcolor"
        android:textSize="30sp"
        android:textStyle="bold" />




    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView3"
        android:id="@+id/cd2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnmain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_camera3"
                android:fontFamily="@font/lustria"
                android:text="Capture Vegetable"
                android:textAllCaps="false"
                android:textColor="@color/belowbgcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                app:tint="@color/white" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cd2"
        android:id="@+id/cd1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnaboutus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
                android:fontFamily="@font/lustria"
                android:text="About us"
                android:textAllCaps="false"
                android:textColor="@color/belowbgcolor"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cd1"
        android:id="@+id/cd3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnexit"
                android:fontFamily="@font/lustria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
                android:text="Exit"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/belowbgcolor"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>




    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/lustria"
        android:text="CAPSTONE PROJECT 2022"
        android:textColor="@color/belowbgcolor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>